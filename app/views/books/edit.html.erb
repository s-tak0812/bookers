<h1>Editing Book</h1>


<div class="book-box">

  <% if @book.errors.any? %>
    <div class="error-box">
      <div class="error-count">
        <%= @book.errors.count %> errors prohibited this book from being saved:
      </div>
      <ul class="error-list">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <%= form_with model:@book do |f| %>
    <p class="form">Title</p>
    <%= f.text_field :title %>

    <p class="form">Body</p>
    <%= f.text_area :body %>

    <p class="update-submit">
      <%= f.submit "Update Book" %>
    </p>

  <% end %>

</div>

<p class="edit-snd-submit">
  <%= link_to "Show", book_path(@book.id) %> |
  <a href='/books'>Back</a>
</p>